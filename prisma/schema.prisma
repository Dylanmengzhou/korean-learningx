generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model WordYonsei {
  id         Int     @id @default(autoincrement())
  korean     String
  type       String
  phrase     String?
  phraseCn   String?
  example    String?
  exampleCn  String?
  chinese    String
  volume     Int // 添加的字段：书的卷数
  bookSeries String // 添加的字段：书籍系列
  status     Int     @default(0) // 0: 未学习，1: 已学习
  chapter    Int     @default(0) // 添加的字段：章节

  createdAt DateTime @default(now()) // 自动创建时间
}
